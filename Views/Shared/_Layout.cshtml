<!DOCTYPE html>
<html>
<head>
    <link rel="SHORTCUT ICON" href="~/Content/litle.ico" type="image/x-icon">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – Yobit Trading Bot</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            right: 0px;
            text-align: right;
            background-color: #24292d /*#f1f1f1*/;
            min-width: 150px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            list-style-type: none;
            margin-left: 0; /* Отступ слева в браузере IE и Opera */
            padding-left: 0; /* Отступ слева в браузере Firefox, Safari, Chrome */
        }

            .dropdown-content a {
                color: white;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: olivedrab;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown:hover .dropbtn {
            background-color: #3e8e41;
        }

        img.user_image {
            width: 40px; /* Ширина рисунка */
            height: 44px; /*  Высота рисунка */
            border: none;
        }

            img.user_image:hover {
                filter: brightness(200);
                width: 40px; /* Ширина рисунка */
                height: 44px; /*  Высота рисунка */
                border: none;
            }

        a.TitleYTB {
            font-size: 22px;
            color: olivedrab;
            float: left;
            height: 50px;
            padding: 15px 15px;
            line-height: 20px;
            box-sizing: border-box;
        }

            a.TitleYTB:hover {
                color: white;
                text-decoration: none;
            }

        .menu {
            font-family: 'DKCForever';
            text-decoration: none;
            color: #9d9d9d;
        }

            .menu:hover {
                font-family: 'DKCForever';
                text-decoration: none;
                color: white;
            }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="TitleYTB" style="font-family: 'DKCForever';">
                    @Html.ActionLink("YOBIT TRADING BOT", "Index", "Home", new { area = "" }, new { @class = "TitleYTB" })
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="menu">@Html.ActionLink("bot", "Bot", "Home", new { area = "" }, new { @class = "menu" })</li>
                    <li class="menu">@Html.ActionLink("instruction", "About", "Home", new { area = "" }, new { @class = "menu" })</li>
                    


                    <div class="dropdown" style="padding: 15px">
                        <li class="menu"><a class="menu">links</a></li>
                        <ul class="dropdown-content">

                            <li><a href="https://vk.com/club182397008">vk</a></li>
                            <li><a href="https://yobitex.net/ru/">YoBit</a></li>
                            <li><a href="https://vk.com/club182397008">YouTube</a></li>

                        </ul>
                    </div>
                </ul>




                <ul class="nav navbar-nav navbar-right" style="color: #9d9d9d">
                        @User.Identity.Name
                    <div class="dropdown">
                        <img class="user_image" src="~/Content/manGray.png">
                        <ul class="dropdown-content">
                            <li>@Html.ActionLink("Войти", "Login", "Account")</li>
                            <li>@Html.ActionLink("Регистрация", "Register", "Account")</li>
                            <li>@Html.ActionLink("Изменить аккаунт", "Edit", "Account")</li>
                            <li>@Html.ActionLink("Удалить аккаунт", "Delete", "Account")</li>
                            <li>@Html.ActionLink("Выйти", "Logout", "Account")</li>
                        </ul>
                    </div>
                </ul>



            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr style="border-top: 1px solid #c3ff47;" />
        <footer>
            <p style="font-family: 'DKCForever'; padding-left: 20px; color: white; ">
                @DateTime.Now.Year – Yobit Trading Bot
                <a style="text-decoration: none; font-size: smaller; margin-left: 50px" class="button" href="https://vk.com/club182397008">vk</a>
                <a style="text-decoration: none; font-size: smaller" class="button" href="https://yobitex.net/ru/">YoBit</a>
                <a style="text-decoration: none; font-size: smaller" class="button" href="https://vk.com/club182397008">YouTube</a>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
